                    <EditText
                        android:id="@+id/editCloseY"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Close Button Y"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- OCR Region -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“· OCR Region (Read Price)"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/editOcrLeft"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Left"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/editOcrTop"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Top"
                        android:inputType="number"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/editOcrRight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Right"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/editOcrBottom"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Bottom"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Price Settings -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Price Settings"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/editHardPriceCap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hard Price Cap (Bot Halts if Exceeded)"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editPriceIncrement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price Increment (usually 1)"
                    android:inputType="number"/>

