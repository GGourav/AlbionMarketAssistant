                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Input Box"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <EditText android:id="@+id/editPriceX"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:hint="Price X"/>
                    <EditText android:id="@+id/editPriceY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:hint="Price Y"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Button"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <EditText android:id="@+id/updateButtonX"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:hint="Update X"/>
                    <EditText android:id="@+id/updateButtonY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:hint="Update Y"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmation 'Yes' Button"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <EditText android:id="@+id/editConfirmYesX"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:hint="Yes X"/>
                    <EditText android:id="@+id/editConfirmYesY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:hint="Yes Y"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OCR Scan Region"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <EditText android:id="@+id/editOcrLeft"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:hint="Left"/>
                    <EditText android:id="@+id/editOcrTop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:hint="Top"/>
                </LinearLayout>

                <LinearLayout
