<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš™ï¸ Calibration Settings"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
            
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All coordinates are PERCENTAGES (0.0-1.0)"
            android:textColor="#888888"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- ==================== CREATE MODE SECTION ==================== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="=== CREATE BUY ORDER MODE ==="
            android:textColor="#00ff88"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Buy Order Button Position -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy Order Button (X%, Y%)"
            android:textColor="#ffaa00"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_buy_order_btn_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.82"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X%"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_buy_order_btn_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.35"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y%"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Row Offset -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Row Y Offset % (distance between rows)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_row_offset_y"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:text="0.10"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="8dp" />

        <!-- Max Rows -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Rows Per Screen"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_max_rows"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="6"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="12dp" />

        <!-- Plus Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Button Position (X%, Y%)"
            android:textColor="#ffaa00"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_plus_btn_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.78"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X%"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_plus_btn_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.62"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y%"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Confirm Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Button (X%, Y%)"
            android:textColor="#ffaa00"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_confirm_btn_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.75"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X%"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_confirm_btn_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.88"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y%"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Scroll Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scroll: Start Y% â†’ End Y%"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_scroll_start_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.75"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="Start"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_scroll_end_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.35"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="End"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Max Items & Price Cap -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Items to Process"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_max_items_create"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="50"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="8dp" />
            
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hard Price Cap (safety limit)"
            android:textColor="#ff6666"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_hard_price_cap_create"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="100000"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="24dp" />

        <!-- ==================== EDIT MODE SECTION ==================== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="=== EDIT BUY ORDER MODE ==="
            android:textColor="#ff8800"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- My Orders Tab -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Orders Tab (X%, Y%)"
            android:textColor="#ffaa00"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_my_orders_tab_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.90"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X%"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_my_orders_tab_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.13"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y%"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Edit Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Button (X%, Y%) - Always Row 1!"
            android:textColor="#ffaa00"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_edit_btn_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.85"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X%"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_edit_btn_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.55"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y%"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Price Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Field Location (X%, Y%)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_price_field_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.50"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X%"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_price_field_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.62"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y%"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Update Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Button (X%, Y%)"
            android:textColor="#00ff00"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_update_btn_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.75"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X%"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_update_btn_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.88"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y%"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Close Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close Button (X%, Y%)"
            android:textColor="#ff6666"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_close_btn_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.95"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X%"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_close_btn_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.10"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y%"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Max Orders & Price Cap -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Orders to Edit"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_max_orders_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="20"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="8dp" />
            
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hard Price Cap"
            android:textColor="#ff6666"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_hard_price_cap_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="100000"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Increment (+silver)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_price_increment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="1"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="24dp" />

        <!-- ==================== TIMING SETTINGS ==================== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="=== TIMING SETTINGS ==="
            android:textColor="#ff00ff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delay After Tap (ms)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_delay_after_tap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="900"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delay After Swipe (ms)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_delay_after_swipe"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="1200"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delay After Confirm (ms)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_delay_after_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="1100"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cycle Cooldown (ms)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_cycle_cooldown"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="500"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="32dp" />

        <!-- BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save_config"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ðŸ’¾ SAVE CONFIG"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#00aa66"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_reset_config"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ðŸ”„ RESET"
                android:textSize="16sp"
                android:background="#aa4400" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
