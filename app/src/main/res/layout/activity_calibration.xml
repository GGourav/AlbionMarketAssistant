                    android:hint="Popup Close Wait ms"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/confirmationWait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmation Wait ms"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/cycleCooldown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
