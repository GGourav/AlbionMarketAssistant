                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/swipeEndX"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="End X"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/swipeEndY"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="End Y"
                        android:inputType="number"/>
                </LinearLayout>

