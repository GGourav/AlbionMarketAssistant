                    android:textColor="#888888"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/createPlusButtonX"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Plus Button X"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/createPlusButtonY"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Plus Button Y"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Buttons -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”˜ Buttons"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/createButtonX"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Create Button X"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/createButtonY"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
