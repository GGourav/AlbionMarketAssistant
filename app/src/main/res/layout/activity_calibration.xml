<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calibration Settings"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- ==================== CREATE MODE SECTION ==================== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="=== CREATE MODE (Fast Loop) ==="
            android:textColor="#00ff88"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Row Start Position -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Row Position (X, Y)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_create_row_start_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="100"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_create_row_start_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="300"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Row Height -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Row Height (pixels between rows)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_create_row_height"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="80"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="12dp" />

        <!-- Plus Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLUS Button (X, Y) - Tap to increment price"
            android:textColor="#ffaa00"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_create_plus_button_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="350"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_create_plus_button_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="450"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- CREATE Button - NEW FIELD -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE Button (X, Y) - CREATE ORDER button"
            android:textColor="#00ff00"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_create_button_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="500"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_create_button_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="550"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Confirm Yes Button - NEW FIELD -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm YES (X, Y) - Tap YES on confirmation popup"
            android:textColor="#00ff00"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_create_confirm_yes_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="500"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_create_confirm_yes_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="600"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Close Button - NEW FIELD -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close Button (X, Y) - For error popups"
            android:textColor="#ff6666"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/et_create_close_button_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="1000"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_create_close_button_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="200"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Hard Price Cap -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hard Price Cap (safety limit)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_create_hard_price_cap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="100000"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="12dp" />

        <!-- Max Rows -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Rows Before Swipe"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_create_max_rows"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="5"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="12dp" />

        <!-- OCR Region -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OCR Region (Left, Top)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_create_ocr_left"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="600"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="Left"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_create_ocr_top"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="200"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Top"
                android:textColorHint="#666666" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OCR Region (Right, Bottom)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/et_create_ocr_right"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="1050"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="Right"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_create_ocr_bottom"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="500"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Bottom"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Swipe Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Start (X, Y)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_create_swipe_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="540"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_create_swipe_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="1500"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Distance (pixels up)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_create_swipe_distance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="300"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="24dp" />

        <!-- ==================== EDIT MODE SECTION ==================== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="=== EDIT MODE (Read and Type Loop) ==="
            android:textColor="#ff8800"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Edit Button on Row 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Button (X, Y) - On first row"
            android:textColor="#ffaa00"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_edit_button_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="950"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_edit_button_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="300"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Price Input Box -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Input Box (X, Y) - For text injection"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_edit_price_input_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="300"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_edit_price_input_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="400"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- UPDATE Button - NEW FIELD -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE Button (X, Y) - UPDATE ORDER button"
            android:textColor="#00ff00"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_edit_update_button_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="500"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_edit_update_button_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="550"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Confirm Yes Button - NEW FIELD -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm YES (X, Y) - Tap YES on confirmation"
            android:textColor="#00ff00"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_edit_confirm_yes_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="500"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_edit_confirm_yes_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="600"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Close Button - NEW FIELD -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close Button (X, Y) - For error popups"
            android:textColor="#ff6666"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/et_edit_close_button_x"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="1000"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="X"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_edit_close_button_y"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="200"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Y"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- Hard Price Cap -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hard Price Cap (safety limit)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_edit_hard_price_cap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="100000"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="12dp" />

        <!-- Price Increment -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Increment (+1 over top price)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_edit_price_increment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="1"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="12dp" />

        <!-- OCR Region for EDIT Mode -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OCR Region (Left, Top)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/et_edit_ocr_left"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="600"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="Left"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_edit_ocr_top"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="200"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Top"
                android:textColorHint="#666666" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OCR Region (Right, Bottom)"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <EditText
                android:id="@+id/et_edit_ocr_right"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="1050"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:layout_marginEnd="8dp"
                android:hint="Right"
                android:textColorHint="#666666" />
            <EditText
                android:id="@+id/et_edit_ocr_bottom"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="500"
                android:textColor="#ffffff"
                android:background="#2a2a4e"
                android:hint="Bottom"
                android:textColorHint="#666666" />
        </LinearLayout>

        <!-- ==================== TIMING SETTINGS ==================== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="=== TIMING SETTINGS ==="
            android:textColor="#ff00ff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loop Delay (ms) - Between operations"
            android:textColor="#aaaaaa"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_loop_delay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="200"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesture Duration (ms) - Min 150ms for 3D games"
            android:textColor="#ffaa00"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et_gesture_duration"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:text="200"
            android:textColor="#ffffff"
            android:background="#2a2a4e"
            android:layout_marginBottom="32dp" />

        <!-- BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save_config"
                android:layout_width="0dp"
                android:layout_height="56dp"
