<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1: Enable Accessibility Service"
        android:textSize="14sp"
        android:textColor="#FF5722"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnNewOrderSweeper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Accessibility Settings"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Then use overlay buttons to start modes"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnOrderEditor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calibration Settings"
        android:backgroundTint="#607D8B"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overlay Buttons:\nC = Create Orders\nE = Edit Orders\n⏸ = Pause/Resume\n⏹ = Stop"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"/>

</LinearLayout>
